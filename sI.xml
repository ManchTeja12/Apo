<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="Simple Interest Calculator"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Principal Amount -->
        <TextView
            android:text="Principal Amount"
            android:textSize="20dp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtPrincipalAmount"
            android:hint="Enter Amount"
            android:drawableStart="@drawable/ic_rupee"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Interest Rate -->
        <TextView
            android:text="Interest Rate"
            android:textSize="20dp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtInterest_Rate"
            android:hint="Enter Interest"
            android:drawableStart="@drawable/ic_percent"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- From Date -->
        <TextView
            android:text="From Date"
            android:textSize="20dp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtFromDate"
            android:hint="Select From Date"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="16dp" />

        <!-- To Date -->
        <TextView
            android:text="To Date"
            android:textSize="20dp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtToDate"
            android:hint="Select To Date"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="16dp" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_bg"
            android:backgroundTint="#1976D2"
            android:text="Calculate Interest"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <!-- Result Block -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F6F8"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvInterestAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interest Amount :"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvInterestRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interest Rate :"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvInteresttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Duration :"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Amount :"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Save and Reset Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="@drawable/button_white_bg"
                android:drawableLeft="@drawable/ic_save"
                android:text="Save Calculation"
                android:textColor="#222222" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:text="Reset"
                android:drawableLeft="@drawable/ic_reset"
                android:background="@drawable/button_white_bg"
                android:textColor="#222222" />
        </LinearLayout>

        <!-- Set Reminder Button -->
        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_white_bg"
            android:backgroundTint="@android:color/white"
            android:drawableStart="@drawable/ic_bell"
            android:padding="15dp"
            android:text="Set Reminder"
            android:textAllCaps="false"
            android:textColor="#222222" />

    </LinearLayout>
</ScrollView>
